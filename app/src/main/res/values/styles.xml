<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">

        <!--see http://www.google.com/design/spec/style/color.html#color-color-palette-->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:textAppearanceButton">@style/NoCapsTextButton</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="NoCapsTextButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CapsTextButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="HeaderTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gulf_blue</item>
        <item name="fontName">robotoslab_regular</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

</resources>