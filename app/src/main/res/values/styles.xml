<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">

        <!--see http://www.google.com/design/spec/style/color.html#color-color-palette-->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:textAppearanceButton">@style/NoCapsTextButton</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="NoCapsTextButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CapsTextButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="HeaderTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gulf_blue</item>
        <item name="fontName">robotoslab_regular</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="ButtonWhite" parent="CapsTextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:background">@drawable/btn_white</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/blue_whale</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="fontName">robotoslab_bold</item>
    </style>

    <style name="AddContactEditTextContainer">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/add_contact_left_right_padding</item>
        <item name="android:layout_marginRight">@dimen/add_contact_left_right_padding</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="AddContactEditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/blue_whale</item>
        <item name="android:textColorHint">@color/blue_whale_50pc</item>
        <item name="fontName">robotoslab_regular</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="SmallText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">19dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/blue_whale</item>
        <item name="fontName">robotoslab_regular</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="ScanHeaderText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">none</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">@color/blue_whale</item>
        <item name="android:textSize">@dimen/desc_text_size</item>
        <item name="fontName">robotoslab_regular</item>
    </style>

</resources>